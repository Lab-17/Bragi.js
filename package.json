{
  "name": "@lab17/bragi-root",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "list": "lerna list",
    "docs": "docusaurus build --out-dir docs",
    "docs:start": "docusaurus start",
    "docs:swizzle": "docusaurus swizzle",
    "docs:deploy": "docusaurus deploy",
    "docs:serve": "docusaurus serve --dir docs",
    "release": "",
    "test": "run-s 'test:*'",
    "test:clear": "rimraf .nyc_output coverage",
    "test:run": "run-p 'test:run:*'",
    "test:run:server": "jest",
    "test:run:client": "cypress run",
    "clear": "rimraf lib docs coverage .nyc_output",
    "reset": "yarn clear node_modules",
    "coverage": "run-s test 'coverage:*'",
    "coverage:copy": "run-p 'coverage:copy:*'",
    "coverage:copy:client": "cpy 'coverage/client/*.json' coverage --rename=coverage-client.json",
    "coverage:copy:server": "cpy 'coverage/server/*.json' coverage --rename=coverage-server.json",
    "coverage:merge": "nyc merge coverage .nyc_output/out.json",
    "coverage:_report": "nyc report --reporter lcov --reporter text --report-dir coverage",
    "lint": "run-s 'lint:*'",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "fix": "run-s 'fix:*'",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --fix .",
    "upgrade": "run-s 'upgrade:*'",
    "upgrade:yarn": "yarn set version latest",
    "upgrade:deps": "yarn upgrade-interactive",
    "upgrade:coverage": "yarn coverage",
    "upgrade:docs": "yarn docs",
    "upgrade:build": "yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@cypress/code-coverage": "^3.8.1",
    "@docusaurus/core": "^2.0.0-alpha.65",
    "@docusaurus/module-type-aliases": "^2.0.0-alpha.65",
    "@docusaurus/preset-classic": "^2.0.0-alpha.65",
    "@mdx-js/react": "^1.6.18",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-strip": "^2.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@testing-library/cypress": "^7.0.1",
    "@tsconfig/docusaurus": "^1.0.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/browserify": "^12.0.36",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.50",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-plugin-istanbul": "^6.0.0",
    "clsx": "^1.1.1",
    "commitizen": "^4.2.1",
    "cpy-cli": "^3.1.1",
    "cypress": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-dts": "^1.4.13",
    "rollup-plugin-terser": "^7.0.2",
    "standardized-audio-context": "^25.1.0",
    "standardized-audio-context-mock": "^8.4.3",
    "ts-jest": "^26.4.1",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  }
}
